World {
  OrthographicCamera cameraA {
    Function lookAt (
      position = [ 0.0 0.0 0.0 ]
      target = [ 0.0 0.0 1.0 ]
      up = [ 0.0 1.0 0.0 ]
    )
  }

  Sphere sphereA {
    Function scale (
      size = [ 25.0 25.0 25.0 ]
    )

    Function translate (
      position = [ 100.0 50.0 25.0 ]
    )

    radius = 1.0
    zMax = 1.0
    zMin = -1.0
    phiMax = 360
  }

  Sphere sphereB {
    Function scale (
      size = [ 25.0 25.0 25.0 ]
    )

    Function translate (
      position = [ 0.0 0.0 0.0 ]
    )

    radius = 1.0
